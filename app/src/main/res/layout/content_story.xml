<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.proj.mike.proj.Story"
    tools:showIn="@layout/activity_story"
    android:id="@+id/layout"
    android:weightSum="1"
    android:visibility="visible">


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="NEXT"
        android:id="@+id/n_button"
        android:onClick="next"
        android:layout_gravity="right|bottom"
        android:textSize="50sp" />

    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Prev"
            android:id="@+id/p_button"
            android:onClick="prev"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="576dp"
            android:layout_toStartOf="@+id/button"
            android:layout_marginEnd="709dp"
            android:layout_weight="0.90"
        android:layout_gravity="left|bottom"
        android:textSize="50sp"
/>

    <RelativeLayout
        android:layout_width="432dp"
        android:layout_height="274dp"
        android:layout_alignTop="@+id/sad_button"
        android:layout_centerHorizontal="true"
        android:layout_gravity="right|center_vertical"
        android:id="@+id/why_happy"
        android:visibility="gone"
        android:focusableInTouchMode="true">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sam is having fun playing"
            android:id="@+id/opt_1"
            android:onClick="next"
            android:textSize="30sp"
            android:layout_above="@+id/opt_3"
            android:layout_alignEnd="@+id/opt_2" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sam doesn&apos;t like soft play"
            android:id="@+id/opt_3"
            android:textSize="30sp"
            android:layout_centerVertical="true"
            android:layout_alignEnd="@+id/opt_1" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sam liked his breakfast"
            android:id="@+id/opt_2"
            android:textSize="30sp"
            android:layout_below="@+id/opt_3"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="273dp"
        android:layout_height="217dp"
        android:layout_gravity="right|center_vertical"
        android:visibility="gone"
        android:id="@+id/ny_layout" >

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="YES"
            android:id="@+id/button5"
            android:layout_gravity="right|center_vertical"
            android:textSize="50sp"
            android:visibility="visible"
            android:onClick="next"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="NO"
            android:id="@+id/button6"
            android:textSize="50sp"
            android:visibility="visible"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/button5"
            android:layout_alignEnd="@+id/button5" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="273dp"
        android:layout_height="217dp"
        android:layout_gravity="right|center_vertical"
        android:visibility="gone"
        android:id="@+id/yn_layout">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="YES"
            android:id="@+id/yes_button"
            android:layout_gravity="right|center_vertical"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:textSize="50sp"
            android:visibility="visible"
            android:onClick="next"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="NO"
            android:id="@+id/no_button"
            android:layout_alignParentBottom="true"
            android:textSize="50sp"
            android:layout_alignStart="@+id/yes_button"
            android:layout_alignEnd="@+id/yes_button"
            android:visibility="visible" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="373dp"
        android:layout_height="272dp"
        android:layout_gravity="right|center_vertical"
        android:id="@+id/h_s_a"
        android:visibility="gone">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="HAPPY"
            android:id="@+id/happy_button"
            android:textSize="50sp"
            android:onClick="next"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SAD"
            android:id="@+id/sad_button"
            android:textSize="50sp"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/happy_button"
            android:layout_alignEnd="@+id/happy_button" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ANGRY"
            android:id="@+id/angry_button"
            android:textSize="50sp"
            android:layout_gravity="center"
            android:layout_alignParentBottom="true"
            android:layout_alignStart="@+id/happy_button" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="430dp"
        android:layout_height="292dp"
        android:layout_gravity="right|center_vertical"
        android:id="@+id/how_sam_feeling"
        android:visibility="gone">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Angry"
            android:id="@+id/button2"
            android:layout_centerVertical="true"
            android:textSize="50sp"
            android:layout_alignEnd="@+id/w_button"
            android:layout_alignStart="@+id/w_button" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Excited"
            android:id="@+id/button4"
            android:visibility="visible"
            android:layout_alignParentTop="true"
            android:textSize="50sp"
            android:layout_alignStart="@+id/button2"
            android:layout_alignEnd="@+id/button2" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Worried"
            android:id="@+id/w_button"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:textSize="50sp"
            android:onClick="next" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="427dp"
        android:layout_height="301dp"
        android:layout_gravity="right|center_vertical"
        android:id="@+id/why_worried"
        android:visibility="gone">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sam wants his gran to get better"
            android:id="@+id/button7"
            android:onClick="next"
            android:textSize="30sp"
            android:layout_above="@+id/button8"
            android:layout_centerHorizontal="true" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sam didn&apos;t like dinner"
            android:id="@+id/button8"
            android:textSize="30sp"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sam wants to go to bed"
            android:id="@+id/button9"
            android:textSize="30sp"
            android:layout_below="@+id/button8"
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="true" />
    </RelativeLayout>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/usr_in_1"
        android:layout_gravity="center"
        android:textSize="30sp"
        android:visibility="gone" />

</FrameLayout>

